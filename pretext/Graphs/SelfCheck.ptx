        <cline>def make_complete_graph(n):</cline>
      </block>
      <block order="2">
        <cline>    G = nx.Graph()</cline>
        <cline>    </cline>
      </block>
      <block order="3">
        <cline>    nodes = range(n)</cline>
        <cline>    </cline>
      </block>
      <block order="1">
        <cline>    G.add_nodes_from(nodes)</cline>
        <cline>    </cline>
      </block>
      <block order="4">
        <cline>    G.add_edges_from(all_pairs(nodes))</cline>
        <cline>    </cline>
      </block>
